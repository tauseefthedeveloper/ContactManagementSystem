<body>
	<div
		class="min-h-screen bg-gradient-to-br from-blue-500 via-purple-600 to-pink-500 flex items-center justify-center p-4">

		<!-- Card -->
		<div
			class="w-full max-w-md bg-white/95 backdrop-blur rounded-2xl shadow-xl p-8">
			<div class="text-center mb-6">
				<h1 class="mt-3 text-2xl font-bold text-gray-800">Welcome back</h1>
				<p class="text-sm text-gray-500">Sign in to manage your contacts</p>
			</div>

			<!-- Alert (optional, show on server error) -->
			<!-- <div class="mb-4 rounded-lg bg-red-50 border border-red-200 text-red-700 px-4 py-2 text-sm">Invalid email or password.</div> -->

			<form id="login" action="Login" method="post"
				class="space-y-4">
				<!-- Email -->
				<div>
					<label for="email" class="block text-sm font-medium text-gray-700">Email</label>
					<input type="email" id="email" name="email" required
						autocomplete="email"
						class="mt-1 w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
						placeholder="you@example.com" />
				</div>

				<!-- Password -->
				<div>
					<label for="password"
						class="block text-sm font-medium text-gray-700">Password</label>
					<div class="relative mt-1">
						<input type="password" id="password" name="password" required
							autocomplete="current-password"
							class="w-full rounded-lg border border-gray-300 px-4 py-2 pr-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
							placeholder="••••••••" />
						<button type="button" id="togglePwd"
							class="absolute inset-y-0 right-2 my-auto text-gray-500 text-sm px-2 rounded hover:bg-gray-100">
							Show</button>
					</div>
				</div>

				<!-- Submit -->
				<button type="submit"
					class="w-full rounded-lg bg-blue-600 text-white font-semibold py-2 hover:bg-blue-700 transition">
					Sign in</button>
			</form>

			<!-- Register link -->
			<p class="mt-6 text-center text-sm text-gray-600">
				New here? <a href="register.jsp"
					class="text-blue-600 font-medium hover:underline">Create an
					account</a>
			</p>
		</div>
	</div>

	<!-- Tiny JS: client checks + toggle password -->
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
  // Password toggle
  const toggle = document.getElementById('togglePwd');
  const pwd = document.getElementById('password');
  toggle.addEventListener('click', () => {
    const isHidden = pwd.type === 'password';
    pwd.type = isHidden ? 'text' : 'password';
    toggle.textContent = isHidden ? 'Hide' : 'Show';
  });

  // AJAX Login
  $('#login').on('submit', function(event){
	event.preventDefault();
    let email = $('#email').val().trim();
    let password = $('#password').val().trim();

    if (!email || !password) {
      alert('Please enter both email and password.');
      return;
    }

    $.ajax({
      url: '<%=request.getContextPath()%>/Login',
      type: 'POST',
      data: { email: email, password: password },
      success: function(data){
        if(data.trim() === "true"){
          alert("Login Successfully!");
          window.location.href = "<%=request.getContextPath()%>/ContactManagementSystem";
        } else {
          alert("Invalid credentials user not found!");
        }
      },
      error: function(){
        alert("Something went wrong!");
      }
    });
  });
</script>

</body>
</html>
